{
  "Api": {
    "Features": {
      "Versioning": false,
      "Swagger": false,
      "Logging": false,
      "Consul": false,
      //"ApplicationInsights": true,
      //"Sts": true,
      "Caching": false
    },
    "ApplicationInsights": {
      "SystemName": "bizca.gateway",
      "InstrumentationKey": "#{azure-appinsights-key}#"
    },
    "Sts": {
      "Provider": "Identity",
      "Authority": "",
      //Present in the keyvault
      "ApiName": "API.Gateway",
      "ApiSecret": "",
      //Present in the keyvault
      "EnableCaching": true,
      "CacheDuration": 30
    },
    "Swagger": {
      "Security": [
        {
          "Name": "Bearer authentication",
          "DisplayName": "Bearer token authorization",
          "Description": "Authentication with bearer token",
          "In": "Header",
          "Type": "http",
          "Scheme": "bearer"
        }
      ],
      "StsSecurity": {
        "Scopes": [
          "partner",
          "internal_settings",
          "thirdparty_kyc"
        ]
      }
    },
    "Antelop": {
      "Certificate": ""
      //Present in the keyvault
    }
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "[Api] Gateway",
        "Uri": "https://#{bizca-gateway-service-host}#/health"
      }
    ],
    "EvaluationTimeinSeconds": 300,
    "MaximumHistoryEntriesPerEndpoint": 12,
    "MaxActiveRequests": 1
  },
  "Health": [
    {
      "Name": "users",
      "Endpoint": "https://#{bizca-users-service-host}#/health"
    },
    {
      "Name": "notification",
      "Endpoint": "https://#{bizca-notification-service-host}#/health"
    }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
